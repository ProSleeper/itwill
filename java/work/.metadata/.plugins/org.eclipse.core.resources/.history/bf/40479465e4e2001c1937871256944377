package com.day6;

import java.util.Scanner;

public class Test1 {

	public static void main(String[] args) {
		//10명 이내의 이름과 점수를 입력 받아
		//점수가 높은 사람 순으로 출력
		
		Scanner sc = new Scanner(System.in);
		
		
		String[] name;
		int[] score;
		int peopleCount = 0;
		
		
		do {
			System.out.print("인워수?[1~10]");
			peopleCount = sc.nextInt();
			
		} while (peopleCount < 0);
		
		
		name = new String[peopleCount];
		score = new int[peopleCount];
		
		
		for (int i = 0; i < peopleCount; i++) {
			System.out.print(i + "번째 이름?");
			name[i] = sc.nextLine();
			System.out.print(i + "점수?");
			score[i] = sc.nextInt();
		}
		
		
		
		for (int i = 0; i < peopleCount - 1; i++) {
			for (int j = i; j < peopleCount; j++) {
				if(score[j] < score[j + 1]) {
					int temp = score[j];
					score[j] = score[j+1];
					score[j+1] = temp;
					
					String tempStr = name[j];
					name[j] = name[j+1];
					name[j+1] = tempStr;
				}
			}
		}
		
		for (int i = 0; i < peopleCount; i++) {
			System.out.printf("%6s %4d\n", name[i], score[i]);
		}
	}
}
