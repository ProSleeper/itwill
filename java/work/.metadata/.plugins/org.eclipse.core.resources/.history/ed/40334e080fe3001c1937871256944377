package com.day6;

public class Test6 {

	public static void main(String[] args) {
		
		int[][] arr = new int[6][6];
		int n = 0;
		
		
		
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < arr.length; j++) {
				
				n++;
				arr[i][j] = n;
				arr[5][5] += n;
				
				
			}
		}
		
		
		for (int i = 0; i < arr.length; i++) {
			for (int j = 0; j < arr.length; j++) {
				
			
				System.out.printf("%4d", arr[i][j]);
				
				
			}
			System.out.println();
		}
		
		
	}

}
