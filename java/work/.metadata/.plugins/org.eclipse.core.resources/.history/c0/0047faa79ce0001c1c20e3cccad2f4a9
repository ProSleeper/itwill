package com.day4;

import java.util.Scanner;

public class Test2 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int su, sum = 0;
		
		do {
			System.out.println("수 입력?");
			su = sc.nextInt();
		}while(su < 1 || su > 5000);
		
		for(int i = 1; i <= su; i++) {
			sum = sum + i;
		}
		
		System.out.println("1~" + su + "까지의 합:" + sum);
		
	}

}
